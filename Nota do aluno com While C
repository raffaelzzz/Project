#include <stdio.h>
#include <stdlib.h>


int main() {

int contador=1;
float nota1,total=0,media;


while (contador < 5){


    printf("\nPor favor, digite a nota %d do aluno: ", contador);
    scanf("%f", &nota1);

    total = total + nota1;

    contador++;
}


media = total / 4;

printf("\ntotal --> %.2f\n", media);

if (media <= 6){

    printf("\nAluno reprovado!\n");

}

else {

printf("\naluno aprovado!\n");


}



}
